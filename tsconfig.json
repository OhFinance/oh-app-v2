{
  "compilerOptions": {
    "target": "es6",
    "jsx": "preserve",
    "lib": ["dom", "dom.iterable", "esnext"],
    "moduleResolution": "node",
    "module": "esnext",
    "allowJs": true,
    "strict": true,
    "noEmit": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "*": ["src/legacy/*"], // the legacy folder should eventually be removed and cleaned up
      "~/*": ["src/*"],
      "@/*": ["public/*"]
    },
    "incremental": true
  },
  "include": ["next-env.d.ts", "types.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", "temp", "src/backup"]
}
